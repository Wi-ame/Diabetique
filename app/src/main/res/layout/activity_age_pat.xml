<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".age_pat">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre intervalle d'Ã¢ge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <ImageView
                android:id="@+id/Age_18_33"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:onClick="onImageClick"
                android:src="@drawable/young"/>
            <ImageView
                android:id="@+id/Age_33_44"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:onClick="onImageClick"
                android:src="@drawable/mature"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <ImageView
                android:id="@+id/Age_44_55"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/avant"
                android:clickable="true"
                android:onClick="onImageClick"/>
            <ImageView
                android:id="@+id/Age_55_plus"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:onClick="onImageClick"
                android:src="@drawable/last"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
