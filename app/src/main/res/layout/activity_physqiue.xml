
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/sp"
    android:padding="16dp"
    tools:context=".physique">
    <TextView
        android:id="@+id/tvActivitePhysique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="40dp"
        android:text="Pratiquez-vous une activité physique?"
        android:textColor="@color/white"
        android:textSize="33dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="serif" />
    <LinearLayout
        android:id="@+id/llActivitePhysique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvActivitePhysique"
        android:orientation="vertical"
        tools:ignore="NotSibling">
        <Button
            android:id="@+id/Non"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/hover"
            android:text="non"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Des_Promenades"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Seulement des promenades"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/hover"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/Une_a_2fois_parsemaine"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="1 à 2 fois par semaine"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/hover"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/trois_a_5fois_parsemaine"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="3 à 5 fois par semaine"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/hover"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</RelativeLayout>
